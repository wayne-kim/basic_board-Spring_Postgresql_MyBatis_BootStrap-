	<update id="keepLogin">
	UPDATE tbl_user 
	SET session_key =#{sessionId}, session_limit = #{next}
	WHERE user_id = #{user_id}
	</update>
	
	<select id="checkUserWithSessionKey" resultType="UserVO">
	SELECT user_num, user_id, user_name, position_id
	FROM tbl_user
